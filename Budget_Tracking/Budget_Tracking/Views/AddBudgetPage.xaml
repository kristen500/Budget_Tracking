<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_Tracking.Views.AddBudgetPage">
    <ContentPage.Content>
        <StackLayout>
            <Editor x:Name="BudgetText"
                  Placeholder="Enter your monthly budget."
                  HeightRequest="100"
                    />
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button 
                        x:Name="BudgetSave" Text="Save"
                    Clicked="BudgetSave_Clicked"  BackgroundColor="Pink"  />
                <Button x:Name="BudgetDelete" Text="Delete"
                        Clicked="BudgetDelete_Clicked"  Grid.Column="1"
                        BackgroundColor="Pink"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>